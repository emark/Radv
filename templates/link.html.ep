% layout 'default';
% title 'Переход по ссылке';

%foreach my $id(keys %{$advert}){
<p class=infocaption>реклама</p>
<p class=infoblock>
  <a href="http://www.web2buy.ru/link/?url=<%=$advert->{$id}{'link'}%>" target=_blank title='Откроется в новом окне'><%=$advert->{$id}{'text'}%></a>
